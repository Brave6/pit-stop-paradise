<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PitStopParadise" parent="Theme.Material3.Light.NoActionBar">
        <item name="isMaterial3Theme">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">#1C312E</item>
        <item name="android:navigationBarColor">#1C312E</item>
    </style>


    <style name="Theme.PitStopParadise" parent="Base.Theme.PitStopParadise">
        <!-- Use Material 3 typography -->
        <item name="textAppearanceBodyLarge">@style/TextAppearance.PitStop.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.PitStop.BodyMedium</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.PitStop.Button</item>
    </style>

    <!-- Inputs (16sp) -->
    <style name="TextAppearance.PitStop.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
    </style>

    <!-- Secondary text (Register, hints, etc., 14sp) -->
    <style name="TextAppearance.PitStop.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
    </style>

    <!-- Buttons (18sp, bold) -->
    <style name="TextAppearance.PitStop.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/hauser</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:radius">12dp</item>
    </style>



</resources>